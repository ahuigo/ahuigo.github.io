// ~/.config/karabiner/assets/complex_modifications/readline.json
{
  "title": "readline shortcuts for mac osx..",
  "rules": [
    {
      "description": "readline shortcuts for mac osx..",
      "manipulators": [
        // ctrl p/n -> up/down
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": [ "left_control" ]
            }
          },
          "to": {
              "key_code": "up_arrow"
         }
        },{
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": [ "left_control" ]
            }
          },
          "to": {
              "key_code": "down_arrow"
          }
        },
        // ctrl+shift p/n-> crtl+p/n
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": [ "left_control","shift" ]
            }
          },
          "to": {
              "key_code": "p",
              "modifiers": [ "control" ]
         }
        },{
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": [ "left_control","shift" ]
            }
          },
          "to": {
              "key_code": "n",
              "modifiers": [ "control" ]
          }
        },
        // ctrl+w
        {
          "type": "basic",
          "from": {
            "key_code": "w",
            "modifiers": {
              "mandatory": [ "control" ]
            }
          },
          "to": {
              "key_code": "delete_or_backspace",
              "modifiers": [ "option" ]
            }
        },{
          "type": "basic",
          "from": {
            "key_code": "delete_or_backspace",
            "modifiers": { "mandatory": [ "option" ] }
          },
          "to": {
              "key_code": "w",
              "modifiers": [ "control" ]
          }
        },
        // ctrl+u
        {
          "type": "basic",
          "from": {
            "key_code": "u",
            "modifiers": { "mandatory": [ "control" ] }
          },
          "to": {
              "key_code": "delete_or_backspace",
              "modifiers": [ "command" ]
            }
        },{
          "type": "basic",
          "from": {
            "key_code": "delete_or_backspace",
            "modifiers": { "mandatory": [ "command" ] }
          },
          "to": {
              "key_code": "u",
              "modifiers": [ "control" ]
          }
        }
      ]
    }
  ]
}
